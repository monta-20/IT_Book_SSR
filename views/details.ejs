<%- include('parts/top.ejs') %>
<div class="container my-5">
  <div class="row align-items-center">
    <div class="col-md-6">
      <div class="book-image">
        <img src="/uploads/<%= book.image %>" alt="<%= book.title %>" class="img-fluid rounded shadow">
      </div>
    </div>
    <div class="col-md-6">
      <h1 class="display-4 text-primary"><%= book.title %></h1>
      <h4 class="text-muted"><%= book.author %></h4>
      <span class="badge bg-success fs-5"><%= book.price %>$</span>
      <p class="mt-3 fs-6 text-secondary"><%= book.description %></p>
    </div>
  </div>
</div>

<%- include('parts/bottom.ejs') %>
